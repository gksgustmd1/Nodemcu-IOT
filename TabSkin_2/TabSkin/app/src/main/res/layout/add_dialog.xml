<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#424242"
        android:gravity="center"
        android:text="디바이스 추가"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="이름을 입력하세요"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RadioButton
            android:id="@+id/skin1_light_btn"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/skin1_border"
            android:drawableTop="@drawable/skin1_light_btn_bg"
            android:fontFamily="@font/fontstyle"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/skin1_tv_btn"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/skin1_border"
            android:drawableTop="@drawable/skin1_tv_btn_bg"
            android:fontFamily="@font/fontstyle"
            android:checked="true"
            android:button="@drawable/skin1_add_dialog_select"/>

        <RadioButton
            android:id="@+id/skin1_key_btn"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/skin1_border"
            android:drawableTop="@drawable/skin1_key_btn_bg"
            android:fontFamily="@font/fontstyle"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/skin1_wifi_btn"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/skin1_border"
            android:drawableTop="@drawable/skin1_wifi_btn_bg"
            android:fontFamily="@font/fontstyle"
            android:checked="true"
            />
    </RadioGroup>
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#424242"
                android:clickable="true"
                android:gravity="center"
                android:text="취소"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#424242"
                android:clickable="true"
                android:gravity="center"
                android:text="확인"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </LinearLayout>
</LinearLayout>