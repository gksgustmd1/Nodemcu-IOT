<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/skin2"
    android:onClick="skin_btn">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="  Cluster Control App"
        android:textSize="40dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:background="#feb943"
        android:fontFamily="@font/nanum"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/adgroup_all"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/skin2_tab_btn"
            android:text="ALL"
            android:textSize="15dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/adgroup1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/skin2_tab_btn_1"
            android:text="group 1"
            android:textSize="15dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/adgroup2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/skin2_tab_btn_1"
            android:text="group 2"
            android:textSize="15dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/adgroup3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/skin2_tab_btn_1"
            android:text="group 3"
            android:textSize="15dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/adgroup4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/skin2_tab_btn_1"
            android:text="group4"
            android:textSize="15dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="660dp"
            android:layout_height="wrap_content"
            android:background="@drawable/skin2_btns_bg">

            <Button
                android:id="@+id/left"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/skin2_left_btn"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/btns"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:orientation="vertical">

                <GridLayout
                    android:id="@+id/btns1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:columnCount="6">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_group_btn_bg" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_tv_btn_bg" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_light_btn_bg" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_tv_btn_bg" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_home_btn_bg" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_tv_btn_bg" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_light_btn_bg" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_tv_btn_bg" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_home_btn_bg" />

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/skin2_tv_btn_bg" />

                </GridLayout>

            </LinearLayout>

            <Button
                android:id="@+id/right"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/skin2_right_btn"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/side_nav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/side_nav1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

            <Button
                android:id="@+id/setting"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/skin1_set_btn_bg"
                android:background="@drawable/skin2_side_menu"
                android:text="setting"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingRight="25dp"
                android:textAllCaps="false"
                android:fontFamily="@font/cafe24oneprettynight"
                android:textColor="#ffffff"/>
                <com.example.tabskin.Skin2_side_menu
                    android:id="@+id/setting_1"
                    android:layout_marginTop="20dp"
                    android:layout_width="30dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/side_nav2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

            <Button
                android:id="@+id/edit"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/skin1_edit_btn_bg"
                android:background="@drawable/skin2_side_menu"
                android:text="edit"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingRight="25dp"
                android:textAllCaps="false"
                android:fontFamily="@font/cafe24oneprettynight"
                android:textColor="#ffffff"/>

            <com.example.tabskin.Skin2_side_menu
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/side_nav3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

            <Button
                android:id="@+id/delete"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/skin1_delete_btn_1_bg"
                android:background="@drawable/skin2_side_menu"
                android:text="delete"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingRight="25dp"
                android:textAllCaps="false"
                android:fontFamily="@font/cafe24oneprettynight"
                android:textColor="#ffffff"/>

                <com.example.tabskin.Skin2_side_menu
                    android:layout_marginTop="20dp"
                    android:layout_width="30dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/side_nav4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

            <Button
                android:id="@+id/end"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/skin1_end_btn_bg"
                android:background="@drawable/skin2_side_menu"
                android:text="end"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingRight="25dp"
                android:textAllCaps="false"
                android:fontFamily="@font/cafe24oneprettynight"
                android:textColor="#ffffff" />

                <com.example.tabskin.Skin2_side_menu
                    android:layout_marginTop="20dp"
                    android:layout_width="30dp"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>