<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:onClick="skin_btn">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="    Cluster Control App"
        android:textSize="40dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:fontFamily="@font/jalnan"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/group_all"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#00ffffff"
            android:text="ALL"
            android:textSize="15dp"
            android:fontFamily="@font/jalnan"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/group1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tab_btn"
            android:text="group 1"
            android:textSize="15dp"
            android:fontFamily="@font/jalnan"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/group2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#00ffffff"
            android:text="group 2"
            android:textSize="15dp"
            android:fontFamily="@font/jalnan"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/group3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#00ffffff"
            android:text="group 3"
            android:textSize="15dp"
            android:fontFamily="@font/jalnan"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/group4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#00ffffff"
            android:text="group4"
            android:textSize="15dp"
            android:fontFamily="@font/jalnan"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="660dp"
            android:layout_height="360dp"
            android:background="@drawable/btns_bg"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/btns1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="0dp"
                android:columnCount="6">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableTop="@drawable/group_btn_bg"
                    android:background="@drawable/border"
                    android:text="text"
                    android:textSize="6dp"
                    android:fontFamily="@font/fontstyle" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableTop="@drawable/light_btn_bg"
                    android:background="@drawable/border"
                    android:text="text"
                    android:textSize="6dp"
                    android:fontFamily="@font/fontstyle" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableTop="@drawable/tv_btn_bg"
                    android:background="@drawable/border"
                    android:text="text"
                    android:textSize="6dp"
                    android:fontFamily="@font/fontstyle" />

            </GridLayout>

            <LinearLayout
                android:id="@+id/left_right_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/side_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/side_nav1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/setting"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/side_menu"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center_vertical"
                    android:paddingRight="25dp"
                    android:text="  setting"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/side_nav2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/edit"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/side_menu"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center_vertical"
                    android:paddingRight="25dp"
                    android:text="  edit"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/side_nav3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/scan"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/side_menu"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center_vertical"
                    android:paddingRight="25dp"
                    android:text="  scan"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/side_nav4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/end"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/side_menu"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center_vertical"
                    android:text="  end"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>