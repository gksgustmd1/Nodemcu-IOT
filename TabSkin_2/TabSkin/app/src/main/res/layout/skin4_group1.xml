<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/skin4"
    android:onClick="skin_btn">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="CLUSTER CONTROL APP"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <Button
        android:id="@+id/skin4_group_all"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/skin1_border"
        android:text="ALL"
        android:textSize="15dp"
        android:fontFamily="@font/fontstyle"
        android:textAllCaps="false"/>

        <Button
            android:id="@+id/skin4_group1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#ffd97c"
            android:text="group 1"
            android:textSize="15dp"
            android:fontFamily="@font/fontstyle"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/skin4_group2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/skin1_border"
            android:text="group 2"
            android:textSize="15dp"
            android:fontFamily="@font/fontstyle"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/skin4_group3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/skin1_border"
            android:text="group 3"
            android:textSize="15dp"
            android:fontFamily="@font/fontstyle"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/skin4_group4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/skin1_border"
            android:text="group4"
            android:textSize="15dp"
            android:fontFamily="@font/fontstyle"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="660dp"
            android:layout_height="360dp"
            android:background="@drawable/skin1_btns_bg"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/btns1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="0dp"
                android:columnCount="6">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/skin4_group_btn_bg" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/skin4_wifi_btn_bg" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/skin4_light_btn_bg" />
            </GridLayout>

            <LinearLayout
                android:id="@+id/left_right_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/side_nav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/setting"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="#ffd97c"
                android:text="setting"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingRight="25dp"
                android:textAllCaps="false"
                android:fontFamily="@font/fontstyle"/>

            <Button
                android:id="@+id/edit"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="#ffd97c"
                android:text="edit"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingRight="25dp"
                android:textAllCaps="false"
                android:fontFamily="@font/fontstyle"/>


            <Button
                android:id="@+id/delete"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="#ffd97c"
                android:text="delete"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingRight="25dp"
                android:textAllCaps="false"
                android:fontFamily="@font/fontstyle"/>

            <Button
                android:id="@+id/end"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="#ffd97c"
                android:text="end"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingRight="25dp"
                android:textAllCaps="false"
                android:fontFamily="@font/fontstyle"/>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

